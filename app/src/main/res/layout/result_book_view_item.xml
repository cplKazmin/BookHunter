<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="book"
            type="com.example.bookhunter.database.Book" />
        <variable
            name="clickListener"
            type="com.example.bookhunter.adapters.SearchResultAdapter.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:onClick="@{() -> clickListener.onClick(book)}">

        <TextView
            android:id="@+id/book_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textStyle="bold"
            android:text='@{book.title ?? "Title not found"}'
            tools:text="Book name" />

        <TextView
            android:id="@+id/authors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text='@{book.authorsStringFormatted ?? "Authors not found"}'
            tools:text="Author one, Author two" />

        <TextView
            android:id="@+id/book_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text='@{book.url ?? "URL not found"}'
            android:autoLink="web"
            tools:text="URL: google.com"/>

    </LinearLayout>

</layout>